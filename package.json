{
  "name": "cloud9",
  "displayName": "Cloud9",
  "version": "0.0.1",
  "publisher": "cse112team9",
  "description": "Cloud9 is an open source vscode extenion that provides programming metrics right in Visual Studio Code.",
  "author": {
    "name": "UCSDCSE112SP19Team9"
  },
  "license": "SEE LICENSE IN LICENSE",
  "galleryBanner": {
    "color": "#384356",
    "theme": "dark"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cse112-sp20/Cloud-9-Leaderboard"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "productivity",
    "timer",
    "git",
    "spotify"
  ],
  "activationEvents": [
    "*"
  ],
  "extensionKind": [
    "ui",
    "workspace"
  ],
  "engines": {
    "vscode": "^1.45.0"
  },
  "main": "./out/extension",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "lint": "tslint -p ./",
    "watch": "tsc -watch -p ./",
    "test": "mocha ./out/test/runTest.js"
  },
  "contributes": {
    "commands": [
      {
        "command": "cloud9.createTeam",
        "title": "Cloud9: Create a team"
      },
      {
        "command": "cloud9.joinTeam",
        "title": "Cloud9: Join a team"
      },
      {
        "command": "cloud9.debugClearUserId",
        "title": "Cloud9 DEBUG: Clear User Id"
      },
      {
        "command": "cloud9.debugClearTeamNameAndId",
        "title": "Cloud9 DEBUG: Clear Team name and ID"
      },
      {
        "command": "cloud9.resetPassword",
        "title": "Cloud9: Reset my password"
      },
      {
        "command": "cloud9.leaderboard",
        "title": "Cloud9: Leaderboard"
      },
      {
        "command": "cloud9.teamLeaderboard",
        "title": "Cloud9: Team Leaderboard"
      },
      {
        "command": "cloud9.getTeamInfo",
        "title": "Cloud9: Get Team Info"
      },
      {
        "command": "cloud9.personalStats",
        "title": "Cloud9: See your most recent stats"
      },

      {
        "command": "LeaderView.refreshEntry",
        "title": "Refresh",
        "icon": {
            "light": "resources/light/refresh.svg",
            "dark": "resources/dark/refresh.svg"
        }
    },
    {
      "command": "DailyMetric.refreshEntry",
      "title": "Refresh",
      "icon": {
          "light": "resources/light/refresh.svg",
          "dark": "resources/dark/refresh.svg"
      }
  }
    ],
    "menus": {
      "view/title": [
        {
          "command": "LeaderView.refreshEntry",
          "when": "view == LeaderView",
          "group": "navigation"
        },
        {
          "command": "DailyMetric.refreshEntry",
          "when": "view == DailyMetric",
          "group": "navigation"
        }

      ]
    },
    
    "configuration": {
      "type": "object",
      "title": "Code Time",
      "properties": {
        "showGitMetrics": {
          "type": "boolean",
          "default": false,
          "description": "Git metrics"
        },
        "toggleFileEventLogging": {
          "type": "boolean",
          "default": false,
          "description": "Enable file event logging"
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "cloud9",
          "title": "Cloud9",
          "icon": "images/cloud9-vscode-icon.svg"
        }
      ]
    },
    "views": {
      "cloud9": [
        {
          "id": "MenuView",
          "name": "Menu"
        },
        {
          "id": "DailyMetric",
          "name": "Daily Metric"
        },
        {
          "id": "TeamMenuView",
          "name": "Team Info"
        },
        {
          "id": "LeaderView",
          "name": "Team Management"
        }
      ]
    }
  },
  "devDependencies": {
    "@types/chai": "^4.2.11",
    "@types/mocha": "^5.2.6",
    "@types/node": "^13.13.5",
    "@types/vscode": "^1.45.0",
    "babel-eslint": "^10.1.0",
    "chai": "^4.2.0",
    "eslint": "^2.10.1",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.20.2",
    "glob": "^7.1.6",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.2",
    "mocha": "^7.1.2",
    "pre-commit": "^1.2.2",
    "prettier": "^2.0.5",
    "ts-loader": "^6.2.1",
    "ts-node": "^8.10.1",
    "tslint": "^6.1.2",
    "typescript": "^3.9.2",
    "vsce": "^1.75.0",
    "vscode-test": "^1.3.0",
    "webpack": "^4.41.5",
    "webpack-cli": "^3.3.10"
  },
  "dependencies": {
    "@slack/web-api": "^5.8.0",
    "aws-sdk": "^2.470.0",
    "axios": "^0.19.0",
    "clipboardy": "^2.1.0",
    "firebase": "^7.14.3",
    "firebase-admin": "^8.12.1",
    "moment-timezone": "^0.5.25",
    "node-cache": "^5.1.0",
    "numeral": "^2.0.6",
    "open": "^6.4.0",
    "require": "^2.4.20",
    "rxjs": "^6.5.5",
    "unique-names-generator": "^4.2.0",
    "vsls": "0.3.1291"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
